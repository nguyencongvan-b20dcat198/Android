<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/muc_bieu_do_sstc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <TextView
        android:id="@+id/bar_chart_item_time_sstc"
        android:layout_width="172dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="20/03/2024"
        android:textAlignment="textStart"
        android:textSize="20dp"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bar_chart_item_income_sstc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="1000000 "
            android:textAlignment="textStart"
            android:textColor="@color/green"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/bar_chart_item_expense_sstc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:text="200000 "
            android:textAlignment="textStart"
            android:textColor="@color/orange"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/bar_chart_item_profit_sstc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="100000 "
            android:textAlignment="textStart"
            android:textColor="@color/blue"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/bar_chart_item_loss_sstc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="350000 "
            android:textAlignment="textStart"
            android:textColor="@color/red"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>