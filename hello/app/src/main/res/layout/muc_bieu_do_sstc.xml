<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <TextView
        android:id="@+id/bar_chart_item_time_sstc"
        android:layout_width="157dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="20/03/2024"
        android:textAlignment="center"
        android:textSize="20dp"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bar_chart_item_income_sstc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1000000 vnđ"
            android:textAlignment="textEnd"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/blue"/>

        <TextView
            android:id="@+id/bar_chart_item_expense_sstc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="200000 vnđ"
            android:textAlignment="textEnd"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/bar_chart_item_residual_sstc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100000 vnđ"
            android:textAlignment="textEnd"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/green"/>
    </LinearLayout>

</LinearLayout>